extends base.pug
block scripts
  script(src='/static/index.js')

block styles
    style 
        include ../static/style.css 
        include ../static/styleContact.css 
block content 
    div.container
      h2 Contact Us
      form(action='/contact', method='post', class='my_form')
        input(type='text', class='my_input', name='name', placeholder='Enter your name')
        input(type='phone', class='my_input', name='phone', placeholder='Enter your phone number')
        input(type='email', class='my_input', name='email', placeholder='Enter your email id')
        input(type='text', class='my_input', name='address', placeholder='Enter your address')
        input(type='text', class='my_input', name='concern', placeholder='Enter your concern')
        button(class='btn')
          | Submit